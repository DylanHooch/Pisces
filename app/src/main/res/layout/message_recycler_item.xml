<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <scut218.pisces.MySquareImageView
        android:layout_width="wrap_content"
        android:layout_height= "wrap_content"
        android:id="@+id/icon_recycler_message"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_recycler_message"
        android:layout_alignEnd="@id/icon_recycler_message"
        android:layout_alignTop="@id/icon_recycler_message"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content_recycler_message"
        android:layout_alignEnd="@id/icon_recycler_message"
        android:layout_alignBottom="@id/icon_recycler_message"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_recycler_message"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>