<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <scut218.pisces.MySquareImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/icon_recycler_message"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_recycler_message"
        android:layout_toRightOf="@id/icon_recycler_message"
        android:layout_alignTop="@id/icon_recycler_message"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content_recycler_message"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/icon_recycler_message"
        android:layout_alignBottom="@id/icon_recycler_message"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_recycler_message"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="6dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
</RelativeLayout>